doctype html
html(lang="en")
	head
		meta(charset='utf-8')
		title eagerfeet
		link(rel='stylesheet', href='/css/bootstrap-2.0.4.min.css')
		link(rel='stylesheet', href='/css/style.css')
		block header
			meta(name='viewport', content='width=device-width, initial-scale=1.0')
			//- Le HTML5 shim, for IE6-8 support of HTML5 elements
			//if lt IE 9
				script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
			script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
			script(type='text/javascript', src='/js/d3.v2.min.js')
			script(type='text/javascript', src='/js/bootstrap-dropdown-2.0.4.js')
			script(type='text/javascript')
				$(document).ready(function() { $('.dropdown-toggle').dropdown(); });

	body
		block content
			div.navbar.navbar-fixed-top
				div.navbar-inner
					div.container
						a.brand(href='/') eagerfeet
						ul.nav
							if (active == 'home')
								li.active
									a(href='/') Home
							else
								li
									a(href='/') Home
							if (active == 'export')
								li.active
									a(href='/export') Export
							else
								li
									a(href='/export') Export
							li
								a(href='http://blog.eagerfeet.org/') Blog
						if (userID != undefined)
							ul.nav.pull-right
								li.dropdown
									a.dropdown-toggle(href='#', data-toggle='dropdown') User Tools
										b.caret
									ul.dropdown-menu
										li
											a(href='javascript:toggleUnits();') Toggle mi/km
										li.divider
										li
											a(href='/logout') Logout

			div.container
				block main

